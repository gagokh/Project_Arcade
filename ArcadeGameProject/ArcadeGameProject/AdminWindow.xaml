<Window x:Class="ArcadeGameProject.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArcadeGameProject"
        mc:Ignorable="d"
        Title="Window1" Height="150" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/project_arcade_bg.png"/>
        </Grid.Background>
        <StackPanel VerticalAlignment="Top"  >
            <Label  FontFamily="pack://application:,,,/fonts/#Oswald" Foreground="Yellow">Wachtwoord</Label>
            <TextBox x:Name="txtUser" MinWidth="400"   FontSize="14" Background="LightGray" Margin="0,0,0,10"/>
            <Button Name="btnSubmit"  Click="BtnSubmit_Click" Content="Submit" Background="Yellow" FontFamily="pack://application:,,,/fonts/#Oswald" Margin="0,0,0,10" />
            <Button Name="btnCancel" Click="BtnCancel_Click" Content="Cancel" Background="Red" FontFamily="pack://application:,,,/fonts/#Oswald" />
        </StackPanel>
    </Grid>
</Window>
